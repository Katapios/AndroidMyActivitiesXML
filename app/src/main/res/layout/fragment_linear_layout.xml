        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Ivan" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Peter"
        android:layout_weight="3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Dennis" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Egor" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Artem"
        android:layout_weight="5" />

</LinearLayout>

